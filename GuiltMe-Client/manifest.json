{
  "manifest_version": 2,

  "name": "GuiltMe",
  "description": "This extension tracks and classifies your work habits",
  "version": "1.0",

  "chrome_url_overrides": {
    "newtab": "html/index.html"
  },

  "background": {
    "scripts":
      [
        "js/lib/jquery-2.1.4.min.js",
        "js/background/background.js",
        "js/const/upstream/upstream_const.js"
      ]
  },

  "content_scripts": [ {
    "js": [
      "js/const/content/content_const.js",
      "js/const/upstream/upstream_const.js",
      "js/content/public/main.js"
    ],
    "matches": [ "*://*.newtab/*"], 
    "css": [ "materialize/css/materialize.min.css", "css/content.css"]
  }],

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost:3000/",
    "https://cdnjs.cloudflare.com/ajax/libs/*"
  ],

  "web_accessible_resources": ["materialize.min.css"],

  "content_security_policy":"script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"

}
